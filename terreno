    <script>
        // Navigation functionality
        let currentSection = 0;
        const sections = ['hero', 'features', 'details', 'price', 'contact'];
        
        function scrollToNext() {
            currentSection = Math.min(currentSection + 1, sections.length - 1);
            document.getElementById(sections[currentSection]).scrollIntoView({ behavior: 'smooth' });
        }
        
        function scrollToTop() {
            currentSection = 0;
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }
        
        // Show/hide up arrow based on scroll position
        window.addEventListener('scroll', function() {
            const arrowUp = document.getElementById('arrowUp');
            if (window.scrollY > 300) {
                arrowUp.classList.add('visible');
            } else {
                arrowUp.classList.remove('visible');
            }
            
            // Update current section based on scroll
            sections.forEach((section, index) => {
                const element = document.getElementById(section);
                const rect = element.getBoundingClientRect();
                if (rect.top >= 0 && rect.top < window.innerHeight / 2) {
                    currentSection = index;
                }
            });
        });
    </script>

